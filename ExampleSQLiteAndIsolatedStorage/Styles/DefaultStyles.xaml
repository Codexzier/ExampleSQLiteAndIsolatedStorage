<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ExampleSQLiteAndIsolatedStorage.Styles">
    <Style x:Key="TextTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20" />
    </Style>
    <Style x:Key="TextDescription" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
    </Style>
    <Style x:Key="TextTitleResults" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style x:Key="TextResults" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
    </Style>
    <Style TargetType="ListViewHeaderItem" BasedOn="{x:Null}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="BorderThickness" Value="1, 0, 0, 0" />
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="Padding" Value="2,5,2,5" />
        <Setter Property="HorizontalAlignment" Value="Center" />
    </Style>
    <Style x:Key="ListViewCellBorder" TargetType="Border">
        <Setter Property="BorderBrush" Value="Black" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Margin" Value="1" />
        <Setter Property="CornerRadius" Value="2" />
    </Style>
</ResourceDictionary>
